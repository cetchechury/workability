<h1> New Place Form </h1>

<%= form_for(@place) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description, "What's the vibe?" %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :place_type, "What kind of place is it?" %><br />
    <%= f.select(:place_type, options_for_select(@place_type), {:prompt => "Please select type"} ) %>
  </div>

  <div class="field">
    <%= f.label :neighborhood %><br />
    <%= f.select(:neighborhood, options_for_select(@neighborhoods), {:prompt => "Please select neighborhood"} ) %>
  </div>

  <div class="field">
    <%= f.label :wifi, "Is there wifi?" %><br />
    <%= f.radio_button :wifi, value: true %>
    <%= f.label :wifi, "Yes" %>
    <%= f.radio_button :wifi, value: false %>
    <%= f.label :wifi, "No" %>
  </div>

  <div class="field">
    <%= f.label :food, "Is there food to nom on?" %><br />
    <%= f.radio_button :food, value: true %>
    <%= f.label :food, "Yes" %>
    <%= f.radio_button :food, value: false %>
    <%= f.label :food, "No" %>
  </div>

  <div class="field">
    <%= f.label :standing_options, "Are there options for standing and working?" %><br />
    <%= f.radio_button :standing_options, value: true %>
    <%= f.label :standing_options, "Yes" %>
    <%= f.radio_button :standing_options, value: false %>
    <%= f.label :standing_options, "No" %>
  </div>

  <div class="field">
    <%= f.label :outdoor_seating, "Can you work outside?" %><br />
    <%= f.radio_button :outdoor_seating, value: true %>
    <%= f.label :outdoor_seating, "Yes" %>
    <%= f.radio_button :outdoor_seating, value: false %>
    <%= f.label :outdoor_seating, "No" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </div>

  <div class="actions">
    <%= f.submit "Add a Place" %>
  </div>

<% end %>
